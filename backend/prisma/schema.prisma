generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique
  content    String
  coverImage String
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  views      Int      @default(0)

  tags       String[] 
  category   String?  

  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int

  // --- NEW: Link to Feedback ---
  feedbacks  Feedback[] 
}

model Feedback {
  id        Int      @id @default(autoincrement())
  email     String
  message   String
  createdAt DateTime @default(now())

  // --- NEW: Optional Link to Post ---
  postId    Int?     
  post      Post?    @relation(fields: [postId], references: [id])
}

model Subscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?  
  createdAt DateTime @default(now())
}

model SiteSettings {
  id    Int    @id @default(1)
  theme String @default("professional") 
}